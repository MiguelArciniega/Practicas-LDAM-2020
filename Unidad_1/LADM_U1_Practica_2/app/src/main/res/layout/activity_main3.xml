<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/fondoOscuro"
    tools:context=".MainActivity3">

    <EditText
        android:id="@+id/campo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ESCRIBA UN TEXTO"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/campo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ESCRIBA UN NUMERO ENTERO"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/campo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ESCRIBA UN NUMERO DECIMAL"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENVIAR" />

    <Button
        android:id="@+id/regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGRESAR" />
</LinearLayout>