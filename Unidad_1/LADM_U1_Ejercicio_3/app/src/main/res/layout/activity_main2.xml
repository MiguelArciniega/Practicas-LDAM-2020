<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    android:paddingTop="80dp"
    android:paddingBottom="40dp"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#fff"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elija una opcion del menu"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="@color/fondotransparente2"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@color/fondotransparente"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/icono1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/icono2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/icono3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/icono4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/icono5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/icono6" />

            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/icono7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/iconfinder_26_android_353471a"
        android:layout_marginTop="60dp"/>

</LinearLayout>